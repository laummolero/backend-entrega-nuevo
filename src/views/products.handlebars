<div class="container">
    <h1>Nuestros Productos</h1>
    <div class="row">
        {{#each products}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text"><strong>Precio: ${{this.price}}</strong></p>
                    <button class="btn btn-primary">Agregar al Carrito</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {{#if hasPrevPage}}
            <li class="page-item"><a class="page-link" href="{{prevLink}}">Anterior</a></li>
            {{else}}
            <li class="page-item disabled"><a class="page-link" href="#">Anterior</a></li>
            {{/if}}

            <li class="page-item active"><a class="page-link" href="#">{{page}}</a></li>

            {{#if hasNextPage}}
            <li class="page-item"><a class="page-link" href="{{nextLink}}">Siguiente</a></li>
            {{else}}
            <li class="page-item disabled"><a class="page-link" href="#">Siguiente</a></li>
            {{/if}}
        </ul>
    </nav>
    <p class="text-center">PÃ¡gina {{page}} de {{totalPages}}</p>
</div>